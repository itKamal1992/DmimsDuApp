<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
				tools:context=".activity.ExamMcqUpload">

	<ScrollView android:id="@+id/login_form"
		android:background="@drawable/background"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout android:id="@+id/llSplashScreen"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

<LinearLayout
	android:layout_marginTop="22dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
>

		<TextView

			android:id="@+id/tvSubHeading1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tvMainHeading2"
			android:layout_gravity="center_horizontal"
			android:fontFamily="sans-serif-medium"
			android:text="MCQ Upload Panel"
			android:textColor="#fff"
			android:textSize="22sp"
			android:layout_marginBottom="@dimen/layout_marginBottom_20dp"
			/>
	<!--<Button-->

		<!--android:id="@+id/btn_GetMCQ"-->
		<!--android:layout_width="50dp"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:text="GET"-->
		<!--android:layout_gravity="end"-->
		<!--android:layout_marginRight="30dp"-->
		<!--android:background="@drawable/white_button_round_square"-->
		<!--android:layout_marginBottom="@dimen/layout_marginBottom_20dp"-->
	<!--/>-->

</LinearLayout>



	<!--Institute List-->
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="20dp"
		android:layout_marginRight="20dp">
		<!-- Left icon !-->
		<LinearLayout android:layout_width="60dp"
			android:orientation="vertical"
			android:layout_height="wrap_content">

			<LinearLayout android:layout_width="60dp"
				android:orientation="vertical"
				android:background="@drawable/white_right_corner_bg2"
				android:layout_height="wrap_content">

				<LinearLayout android:orientation="vertical"
					android:gravity="center_vertical|center_horizontal"
					android:layout_width="match_parent"
					android:layout_height="50dp">

					<ImageView android:background="@drawable/ic_notice_type"
						android:scaleType="fitCenter"
						android:layout_width="30dp"
						android:layout_height="30dp"/>

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical"
			android:background="@drawable/white_right_corner_bg"
			android:layout_height="50dp">
			<Spinner
				android:id="@+id/spinner_institue"
				android:layout_width="match_parent"
				android:layout_alignParentTop="true"
				android:layout_margin="10dp"
				android:textSize="20dp"
				android:textStyle="bold"
				android:layout_height="wrap_content"/>

		</LinearLayout>


	</LinearLayout>

	<!-- Course List -->
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="20dp"
		android:layout_marginRight="20dp">
		<!-- Left icon !-->
		<LinearLayout android:layout_width="60dp"
			android:orientation="vertical"
			android:layout_height="wrap_content">

			<LinearLayout android:layout_width="60dp"
				android:orientation="vertical"
				android:background="@drawable/white_right_corner_bg2"
				android:layout_height="wrap_content">

				<LinearLayout android:orientation="vertical"
					android:gravity="center_vertical|center_horizontal"
					android:layout_width="match_parent"
					android:layout_height="50dp">

					<ImageView android:background="@drawable/ic_notice_type"
						android:scaleType="fitCenter"
						android:layout_width="30dp"
						android:layout_height="30dp"/>

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical"
			android:background="@drawable/white_right_corner_bg"
			android:layout_height="50dp">
			<Spinner
				android:id="@+id/spinner_courselist"
				android:layout_width="match_parent"
				android:layout_alignParentTop="true"
				android:layout_margin="10dp"
				android:textSize="20dp"
				android:textStyle="bold"
				android:layout_height="wrap_content"/>

		</LinearLayout>


	</LinearLayout>

	<!-- Department List -->
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginBottom="20dp"
		android:layout_marginRight="20dp">
		<!-- Left icon !-->
		<LinearLayout android:layout_width="60dp"
			android:orientation="vertical"
			android:layout_height="wrap_content">

			<LinearLayout android:layout_width="60dp"
				android:orientation="vertical"
				android:background="@drawable/white_right_corner_bg2"
				android:layout_height="wrap_content">

				<LinearLayout android:orientation="vertical"
					android:gravity="center_vertical|center_horizontal"
					android:layout_width="match_parent"
					android:layout_height="50dp">

					<ImageView android:background="@drawable/ic_notice_type"
						android:scaleType="fitCenter"
						android:layout_width="30dp"
						android:layout_height="30dp"/>

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="vertical"
			android:background="@drawable/white_right_corner_bg"
			android:layout_height="50dp">
			<Spinner
				android:id="@+id/spinner_deptlist"
				android:layout_width="match_parent"
				android:layout_alignParentTop="true"
				android:layout_margin="10dp"
				android:textSize="20dp"
				android:textStyle="bold"
				android:layout_height="wrap_content"/>

		</LinearLayout>


	</LinearLayout>
		<!-- Year List -->
		<LinearLayout android:orientation="horizontal"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:layout_marginLeft="20dp"
					  android:layout_marginBottom="20dp"
					  android:layout_marginRight="20dp">
			<!-- Left icon !-->
			<LinearLayout android:layout_width="60dp"
						  android:orientation="vertical"
						  android:layout_height="wrap_content">

				<LinearLayout android:layout_width="60dp"
							  android:orientation="vertical"
							  android:background="@drawable/white_right_corner_bg2"
							  android:layout_height="wrap_content">

					<LinearLayout android:orientation="vertical"
								  android:gravity="center_vertical|center_horizontal"
								  android:layout_width="match_parent"
								  android:layout_height="50dp">

						<ImageView android:background="@drawable/ic_notice_type"
								   android:scaleType="fitCenter"
								   android:layout_width="30dp"
								   android:layout_height="30dp"/>

					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
						  android:orientation="vertical"
						  android:background="@drawable/white_right_corner_bg"
						  android:layout_height="50dp">
				<Spinner
					android:id="@+id/spinner_yearlist"
					android:layout_width="match_parent"
					android:layout_alignParentTop="true"
					android:layout_margin="10dp"
					android:textSize="20dp"
					android:textStyle="bold"
					android:layout_height="wrap_content"/>

			</LinearLayout>


		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:layout_marginLeft="20dp"
					  android:layout_marginBottom="20dp"
					  android:layout_marginRight="20dp">

			<!--Note Date -->


			<!-- Left icon !-->
			<LinearLayout android:layout_width="60dp"
						  android:orientation="vertical"
						  android:layout_height="wrap_content">

				<LinearLayout android:layout_width="60dp"
							  android:orientation="vertical"
							  android:background="@drawable/white_right_corner_bg2"
							  android:layout_height="wrap_content">

					<LinearLayout android:orientation="vertical"
								  android:gravity="center_vertical|center_horizontal"
								  android:layout_width="match_parent"
								  android:layout_height="50dp">

						<ImageView android:background="@drawable/ic_calendar"
								   android:scaleType="fitCenter"
								   android:layout_width="30dp"
								   android:layout_height="30dp"/>

					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
						  android:orientation="horizontal"
						  android:id="@+id/from_date_layout"
						  android:onClick="clickFromDataPicker"
						  android:background="@drawable/white_right_corner_bg"
						  android:layout_height="50dp"


			android:weightSum="10">
				<TextView
					android:layout_weight="5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="From Date"
					android:gravity="center_vertical"
				/>
				<TextView
					android:layout_weight="5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/txt_from_date"
					android:text="From Date"
					android:textStyle="bold"
					android:gravity="center_vertical"
				/>





			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:layout_marginLeft="20dp"
					  android:layout_marginBottom="5dp"
					  android:layout_marginRight="20dp">

			<!--Note Date -->


			<!-- Left icon !-->
			<LinearLayout android:layout_width="60dp"
						  android:orientation="vertical"
						  android:layout_height="wrap_content">

				<LinearLayout android:layout_width="60dp"
							  android:orientation="vertical"
							  android:background="@drawable/white_right_corner_bg2"
							  android:layout_height="wrap_content">

					<LinearLayout android:orientation="vertical"
								  android:gravity="center_vertical|center_horizontal"
								  android:layout_width="match_parent"
								  android:layout_height="50dp">

						<ImageView android:background="@drawable/ic_calendar"
								   android:scaleType="fitCenter"
								   android:layout_width="30dp"
								   android:layout_height="30dp"/>

					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
						  android:orientation="horizontal"
						  android:id="@+id/to_date_layout"
						  android:onClick="clickToDataPicker"
						  android:background="@drawable/white_right_corner_bg"
						  android:layout_height="50dp"
						  android:weightSum="10">
				<TextView
					android:layout_weight="5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="To Date"
					android:gravity="center_vertical"
				/>
				<TextView
					android:layout_weight="5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/txt_to_date"
					android:text="To Date"
					android:textStyle="bold"
					android:gravity="center_vertical"
				/>







			</LinearLayout>
		</LinearLayout>
		<!-- MCQ upload -->


		<LinearLayout
			android:layout_marginLeft="20dp"
			android:layout_marginBottom="20dp"
			android:layout_marginRight="20dp"
			android:padding="2dp"

			android:layout_marginTop="@dimen/layout_marginBottom_20dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		android:background="@drawable/nav_bg">

			<LinearLayout
				android:layout_marginTop="8dp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:orientation="horizontal"
						  android:layout_width="match_parent"
						  android:layout_height="wrap_content">
				<!-- Left icon !-->
				<LinearLayout android:layout_width="60dp"
							  android:orientation="vertical"
							  android:layout_height="wrap_content">

					<LinearLayout android:layout_width="60dp"
								  android:orientation="vertical"
								  android:background="@drawable/white_right_corner_bg2"
								  android:layout_height="wrap_content">

						<LinearLayout android:orientation="vertical"
									  android:gravity="center_vertical|center_horizontal"
									  android:layout_width="match_parent"
									  android:layout_height="50dp">

							<ImageView android:background="@drawable/ic_add_photo"
									   android:scaleType="fitCenter"
									   android:layout_width="30dp"
									   android:layout_height="30dp"/>

						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
							  android:orientation="vertical"
							  android:background="@drawable/white_right_corner_bg"
							  android:layout_height="50dp">
					<Button android:layout_width="match_parent"
							android:id="@+id/btn_gallary"
							android:hint="Click to upload pdf"
							android:textSize="16sp"
							android:layout_gravity="left"
							android:textAlignment="textStart"
							android:background="@drawable/white_right_corner_bg"
							android:layout_marginLeft="10dp"
							android:layout_marginRight="10dp"
							android:layout_height="match_parent"
							android:textColor="@android:color/background_dark" tools:ignore="RtlCompat"/>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:layout_marginTop="2dp"
				android:id="@+id/txt_view_header"
					  android:layout_marginRight="10dp"
					  android:layout_marginLeft="10dp"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:text="File Name :"
				android:textStyle="bold"
				android:textSize="16dp"
					  android:textColor="@color/colorWhite"/>
			<LinearLayout
				android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical">
				<TextView
					android:id="@+id/txt_fileStart"
					android:layout_marginRight="10dp"
					android:layout_marginLeft="12dp"
					android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/colorWhite"
					android:textSize="14dp"
					android:layout_gravity="center_vertical"
				/>
			<EditText
				android:id="@+id/edit_upload_fname"
					  android:layout_marginRight="10dp"
					  android:layout_marginLeft="10dp"
					  android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:inputType="textPersonName"
					  android:textColor="@color/colorWhite"
					  android:textColorHint="@color/colorWhite"
					  android:hint="Enter file name"/>
			</LinearLayout>
		</LinearLayout>

		<Button
			android:id="@+id/btn_Submit"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:text="Submit"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/white_button_round_square"
			android:layout_marginBottom="@dimen/layout_marginBottom_20dp"
		/>

	</LinearLayout>
	</ScrollView>
</RelativeLayout>