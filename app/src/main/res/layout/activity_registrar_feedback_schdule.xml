<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistrarFeedbackSchdule">

    <ScrollView android:id="@+id/login_form"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/mob_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_login3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="FEEDBACK SCHEDULER"
                android:textColor="#fff"
                android:textSize="20sp"
                />


            <Button
                android:id="@+id/btn_Scheduled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled Feedback"
                android:layout_margin="10dp"
                android:background="@drawable/orgsche_button_bg"
                />




            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_type"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/spinner_FeedbackType"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/layout_marginBottom_20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:fontFamily="sans-serif-medium"
                android:text="Feedback Date"
                android:textColor="#fff"
                android:textSize="18sp"
                />
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="20dp">

                <!--Note Date -->


                <!-- Left icon !-->

                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_calendar"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/date_layout"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">

                    <TextView android:layout_width="match_parent"
                        android:onClick="clickToDataPicker1"
                        android:id="@+id/select_date"
                        android:layout_gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="12dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="7dp"
                        />


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/layout_marginBottom_20dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"

                android:fontFamily="sans-serif-medium"
                android:text="Select Date "
                android:textColor="#fff"
                android:textSize="18sp"
                />



            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">

                <!--Note Date -->


                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <ImageView android:background="@drawable/ic_calendar"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/date_layout2"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:id="@+id/ll_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_label_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            />

                        <TextView android:layout_width="110dp"
                            android:onClick="clickFromDataPicker"
                            android:id="@+id/select_from_date"
                            android:layout_gravity="left"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_toRightOf="@id/ll_startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tv_label_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Date"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"

                            />


                        <TextView android:layout_width="110dp"
                            android:onClick="clickToDataPicker"
                            android:id="@+id/select_to_date"
                            android:layout_marginTop="3dp"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_type"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/spinner_institue"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <!-- Course List -->
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_type"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/spinner_courselist"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_type"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/spinner_deptlist"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_type"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <Spinner
                        android:id="@+id/spinner_Yeardeptlist"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:entries="@array/arr_Year"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>


            <Button android:layout_width="match_parent"
                android:id="@+id/btn_ScheduleFeedback"
                style="?android:textAppearanceSmall"
                android:text="Schedule Feedback"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_button_bg"
                android:layout_marginTop="16dp"
                android:layout_height="50dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"/>

            <ProgressBar
                android:id="@+id/progressbarlogin4"
                style="?android:attr/progressBarStyle"
                android:layout_width="28dp"
                android:indeterminate="true"
                android:visibility="invisible"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/cardview_light_background"
                android:layout_height="28dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>