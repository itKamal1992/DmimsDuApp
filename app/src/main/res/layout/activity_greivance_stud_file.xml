<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GreivanceStudFile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        >

        <LinearLayout
            android:id="@+id/llSplashScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSubHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_below="@id/tvMainHeading2"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Grievance Form"
                android:layout_marginBottom="20dp"
                android:textColor="#fff"
                android:textSize="22sp"
                />



            <Button
                android:id="@+id/btn_ViewSubmitGriev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="Submitted Grievance"
                android:background="@drawable/orgsche_button_bg"
                />


            <!--Notice Title-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                >

                <!--Note Date -->




                <!-- Left icon !-->
                <LinearLayout
                    android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_notice_title"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <EditText android:layout_width="match_parent"
                        android:id="@+id/et_namegrivienceStud"
                        android:hint="Name "
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/white_right_corner_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_dark"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">

                <!-- Left icon !-->

                <LinearLayout
                    android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView
                                android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/et_subComplaintGrive"
                        android:hint="Subject of complaint"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/white_right_corner_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">

                <!-- Left icon !-->

                <LinearLayout
                    android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            >

                            <ImageView
                                android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">


                    <Spinner
                        android:id="@+id/spinner_studGriveCategory"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:entries="@array/arr_griev_category"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="60dp">
                    <EditText android:layout_width="match_parent"
                        android:id="@+id/et_DetailsComplaintGrive"
                        android:hint="Details of the person against whom the\ncomplaint to be lodged"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:background="@drawable/white_right_corner_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="50dp"
                    android:orientation="vertical"
                    android:layout_height="150dp"
                    >

                    <LinearLayout android:layout_width="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView android:background="@drawable/ic_description"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="match_parent">
                    <EditText android:layout_width="match_parent"
                        android:id="@+id/et_DetailsDescriGrive"
                        android:hint="Detailed description of grievance(*)"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/white_right_corner_bg"

                        android:layout_marginRight="10dp"
                        android:layout_height="150dp"
                        android:textColor="@android:color/background_dark"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <!--<EditText android:layout_width="match_parent"-->
                    <!--android:id="@+id/viewtxt_jobtitle"-->
                    <!--android:hint="Job Title(*)"-->
                    <!--android:textSize="16sp"-->
                    <!--android:inputType="text"-->
                    <!--android:background="@drawable/white_right_corner_bg"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:textColor="@android:color/background_dark"/>-->
                    <Spinner
                        android:id="@+id/spinner_CollegeNameGriev"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:entries="@array/arr_collegeName"
                        android:layout_margin="10dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>




            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <!--<EditText android:layout_width="match_parent"-->
                    <!--android:id="@+id/viewtxt_jobtitle"-->
                    <!--android:hint="Job Title(*)"-->
                    <!--android:textSize="16sp"-->
                    <!--android:inputType="text"-->
                    <!--android:background="@drawable/white_right_corner_bg"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:textColor="@android:color/background_dark"/>-->
                    <Spinner
                        android:id="@+id/spinner_ComplaintToGriev"
                        android:layout_width="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:entries="@array/arr_complaintTo"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">

                    <Button android:layout_width="200dp"
                        android:id="@+id/admin_griev_upload"
                        android:hint="Click to upload pdf/jpg"
                        android:textSize="16sp"
                        android:layout_gravity="left"
                        android:textAlignment="textStart"
                        android:background="@drawable/white_right_corner_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_dark" tools:ignore="RtlCompat"/>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">
                <!-- Left icon !-->
                <LinearLayout android:layout_width="60dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="60dp"
                        android:orientation="vertical"
                        android:background="@drawable/white_right_corner_bg2"
                        android:layout_height="wrap_content">

                        <LinearLayout android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView android:background="@drawable/ic_add_photo"
                                android:scaleType="fitCenter"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/white_right_corner_bg"
                    android:layout_height="50dp">
                    <EditText android:layout_width="match_parent"
                        android:id="@+id/et_dateGriev"
                        android:hint="Date of complaint(*)"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:background="@drawable/white_right_corner_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_dark"/>

                </LinearLayout>


            </LinearLayout>




            <Button android:layout_width="match_parent"
                android:id="@+id/btn_submit_grievance"
                style="?android:textAppearanceSmall"
                android:text="submit grievance"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blue_button_bg"
                android:layout_marginTop="16dp"
                android:layout_height="50dp"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"/>


            <LinearLayout android:id="@+id/register_form"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>