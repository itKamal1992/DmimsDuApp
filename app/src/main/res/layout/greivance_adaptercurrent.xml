					<!--android:layout_height="57dp"-->
					<!--android:contentDescription="@string/app_name"-->
					<!--android:scaleType="centerInside"-->
					<!--android:padding="10dp"/>-->
			<!---->
			<!---->
		<!---->
	<!---->
		<!--</LinearLayout>-->
	</android.support.v7.widget.CardView>
	</android.support.v7.widget.CardView>
</LinearLayout>