<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.dmims.dmims.dashboard.ExamCellDashboard">
    
    <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:background="#F44336"
                    app:titleTextColor="#fff"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
            />
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/cardview_light_background">
                <LinearLayout
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/cardview_light_background">
                    <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_height="170dp"
                            android:background="@color/cardview_light_background"/>
            
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/viewPager"
                            android:layout_marginTop="8dp"
                    />
            
                    <LinearLayout
                            android:id="@+id/SliderDots"
                            android:layout_below="@+id/viewPager"
                            android:orientation="horizontal"
                            android:layout_marginTop="-12dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:visibility="invisible"
                            android:layout_height="wrap_content"></LinearLayout>
            
            
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                    >
                        <LinearLayout
                            android:id="@+id/noticeboardgrid"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notice"
                                android:background="@drawable/white_right_corner_bg"

                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="Notice Board"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/notification"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_notification"
                                android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="Notification"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/noticeInboxGrid"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:src="@drawable/ic_attendence"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:padding="8dp"
                                android:text="Notice Inbox"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14sp"
                            />

                        </LinearLayout>



    
                      
                
                       
            
            
                    </LinearLayout>
            
                    <!-- Second Row-->
                    <LinearLayout
                            android:id="@+id/accreditation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                    >
                        <LinearLayout
                            android:id="@+id/Mcq_grid"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_event"
                                android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="MCQ"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Mcq_grid_Notification"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_event"
                                android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="MCQ Notification"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/Mcq_grid_Inbox"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_event"
                                android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="MCQ Inbox"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>

                
                       
    
            
            
                    </LinearLayout>
                    <!-- End Second Row-->
                    <!-- Third Row-->
                    <LinearLayout
                            android:id="@+id/emergencygrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                    >

                        <LinearLayout
                            android:id="@+id/ll_feedbackSchedular_Ei"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_help"
                                android:background="@drawable/white_right_corner_bg"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="Feedback Scheduler"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/helpdiloadboad"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                        >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_help"
                                android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/white_right_corner_bg"
                                android:text="Help"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:textColor="#000"
                            />

                        </LinearLayout>
                    
            
            
                    </LinearLayout>
                    <!-- End Third Row-->
        
                </LinearLayout>
    
            </ScrollView>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/drawer_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:background="#e71c3b"
        >
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/nav_bg">
                <ImageView
                    android:id="@+id/drawer_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Student Name"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:background="@drawable/drawer_profile"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:layout_margin="@dimen/elevation_5dp"
                android:background="@drawable/nav_bg"
                >

                <TextView
                    android:id="@+id/drawer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="Student Name"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="User Role."
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Designation"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Email"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt_Mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Mobile"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/enroll_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Enrollment No."
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            
            <android.support.design.widget.NavigationView
                    android:id="@+id/navigation_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/exam_cell_drawer_menu"
            />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    
    



</LinearLayout>
