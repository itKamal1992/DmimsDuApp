<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/layout_marginLeft_5dp"
              android:layout_marginRight="@dimen/layout_marginRight_5dp">


    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        app:cardBackgroundColor="@color/colorBitterSweet"
                                        app:cardCornerRadius="@dimen/cardCornerRadius_15dp">

        <LinearLayout android:id="@+id/linearLayout2"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_marginTop_25dp"
                android:layout_marginBottom="@dimen/layout_marginBottom_25dp"
                android:orientation="vertical">
                <ImageView android:id="@+id/ivCustomDialogNegClose"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:layout_marginStart="8dp"
                           android:layout_marginLeft="8dp"
                           android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                           android:elevation="@dimen/elevation_5dp"
                           android:src="@drawable/ic_close_black_24dp" app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintHorizontal_bias="1.0"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvTitleCustomDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:text="Preview of Notice"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" android:textSize="@dimen/txt_size_25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivCustomDialogNegClose"/>

                <ImageView
                    android:id="@+id/dialog_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:scaleX="2.5" android:scaleY="1.5"
                    android:src="@mipmap/ic_question_mark"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleCustomDialog"/>
                <TextView android:id="@+id/tvMsgCustomDialog"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="8dp"
                          android:layout_marginLeft="8dp"
                          android:layout_marginTop="16dp"
                          android:layout_marginEnd="8dp"
                          android:layout_marginRight="8dp" android:text="@string/positive_popup_default"
                          android:textAlignment="center"
                          android:textColor="@color/colorWhite" android:textSize="@dimen/txt_size_18dp"
                          android:textStyle="bold"
                          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/dialog_image"/>
                <Button android:id="@+id/btnCustomDialogCancel"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" android:background="@drawable/btn_white_round"
                        android:text="No"
                        android:textColor="@color/colorblack"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnCustomDialogAccept"
                        app:layout_constraintHorizontal_bias="0.378" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMsgCustomDialog"/>


                <Button android:id="@+id/btnCustomDialogAccept"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="44dp"
                        android:layout_marginRight="44dp"

                        android:layout_marginBottom="8dp" android:background="@drawable/btn_white_round"
                        android:text="Yes" android:textColor="@color/colorblack"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMsgCustomDialog"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>