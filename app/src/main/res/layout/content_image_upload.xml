<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ImageUpload">
	
		
	<ImageView android:layout_width="90dp"
	           android:layout_height="90dp"
	           android:layout_centerHorizontal="true"
	           android:layout_marginTop="15dp"
	           android:id="@+id/imageView"
	           android:visibility="gone"
	/>
	<TextView android:layout_width="270dp"
	          android:layout_height="50dp"
	          android:layout_centerHorizontal="true"
	          android:layout_below="@+id/imageView"
	          android:hint="Enter Image Title"
	          android:id="@+id/img_tilte"
	          android:visibility="gone"
	          android:layout_marginTop="0dp"/>
	<Button android:layout_width="match_parent"
	        android:id="@+id/btn_chooseimg"
	        style="?android:textAppearanceSmall"
	        android:text="CHOOSE IMAGE"
	        android:fontFamily="sans-serif-condensed-medium"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/blue_button_bg"
	        android:layout_below="@id/img_tilte"
	        android:layout_height="50dp"
	        android:layout_marginTop="24dp"
	        android:textColor="@android:color/background_dark"
	        android:textSize="15sp"/>
	
	<Button android:layout_width="match_parent"
	        android:id="@+id/btn_uploadimg"
	        style="?android:textAppearanceSmall"
	        android:text="UPLOAD IMAGE"
	        android:fontFamily="sans-serif-condensed-medium"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/blue_button_bg"
	        android:layout_marginTop="16dp"
	        android:layout_height="50dp"
	        android:layout_below="@id/btn_chooseimg"
	        android:textColor="@android:color/background_dark"
	        android:enabled="false"
	        android:textSize="15sp"/>

</RelativeLayout>