<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".activity.FeedbackDackOptionsForStud"
        android:orientation="vertical">



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback Panel"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorWhite"
            android:paddingBottom="10dp"
    >
        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_note_feedbackpanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTE"
                android:gravity="center_horizontal"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"

        />
        <LinearLayout
                android:layout_below="@+id/tv_note_feedbackpanel"
                android:id="@+id/linear_one"
                android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_notebtn_org"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_round_active"
                android:layout_marginLeft="@dimen/FB_QuestionLeft_10dp"
        />

        <TextView
                android:id="@+id/tv_note_fdbackComplete"
                android:layout_below="@+id/tv_note_feedbackpanel"
                android:layout_toRightOf="@+id/btn_notebtn_org"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Not Completed"
        />
        </LinearLayout>
        <LinearLayout
                android:layout_below="@+id/linear_one"
                android:layout_width="match_parent"
                      android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_notebtn_grn"
                android:layout_below="@+id/btn_notebtn_org"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_round_inactive"
                android:layout_marginLeft="@dimen/FB_QuestionLeft_10dp"
        />
        <TextView
                android:id="@+id/tv_note_fdbackInComplete"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_note_fdbackComplete"
                android:layout_toRightOf="@+id/btn_notebtn_org"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback Completed"
        />
        </LinearLayout>

    </RelativeLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_annualfeedbaack"
            style="?android:textAppearanceSmall"
            android:text="Annual Feedback"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/feedback_button_bg"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorblack"
            android:textSize="15sp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_satsur"
            style="?android:textAppearanceSmall"
            android:text="Student Satisfaction Survey"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/feedback_button_bg"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorblack"
            android:textSize="15sp"/>


</LinearLayout>