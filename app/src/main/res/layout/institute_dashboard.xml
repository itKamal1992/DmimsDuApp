<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
	          tools:context="com.dmims.dmims.dashboard.AdminDashboard">

	<android.support.v4.widget.DrawerLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/drawer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>

			<android.support.v7.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="#F44336"
				android:elevation="4dp"
				android:fitsSystemWindows="true"
				android:minHeight="?attr/actionBarSize"
				app:titleTextColor="#fff"
			/>



			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorWhiteShade">

				<LinearLayout
					android:id="@+id/mainLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/cardview_light_background"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="170dp"
						android:background="@color/colorblack"
						android:orientation="vertical"
						android:weightSum="10">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_gravity="center_vertical"
							android:layout_weight="1.5"
							android:gravity="center_vertical"
							android:orientation="vertical">

							<android.support.v4.view.ViewPager
								android:id="@+id/viewPager"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:fitsSystemWindows="true"
								/>


						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="8.5"
							android:layout_gravity="center_horizontal">

							<LinearLayout
								android:id="@+id/SliderDots"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_gravity="center_horizontal"
								android:gravity="center_horizontal|center_vertical"
								android:layout_marginTop="0dp"
								android:orientation="horizontal">

							</LinearLayout>
						</LinearLayout>
					</LinearLayout>



      <LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:background="@color/colorWhiteShade"
	  android:orientation="vertical"
	  android:padding="2dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:weightSum="3"
					>
						<LinearLayout
							android:id="@+id/noticeInboxGrid"
							android:layout_width="0dp"
							android:layout_height="130dp"
							android:layout_margin="2dp"
							android:layout_weight="1"
							android:background="@color/colorWhite"
							android:orientation="vertical"
						>
							<ImageView
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_gravity="center"
								android:layout_marginTop="20dp"
								android:background="@drawable/white_right_corner_bg"
								android:src="@drawable/ic_attendence"
							/>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:background="@drawable/white_right_corner_bg"
								android:padding="8dp"
								android:text="Notice Inbox"
								android:textAlignment="center"
								android:textColor="#000"
								android:textSize="14sp"
							/>

						</LinearLayout>


						<LinearLayout
							android:id="@+id/noticeboardgrid"
							android:layout_width="0dp"
							android:layout_height="130dp"
							android:layout_margin="2dp"
							android:layout_weight="1"
							android:background="@color/colorWhite"
							android:orientation="vertical"
						>
							<ImageView
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_gravity="center"
								android:layout_marginTop="20dp"
								android:background="@drawable/white_right_corner_bg"
								android:src="@drawable/ic_notice"

							/>

							<TextView
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="0dp"
								android:background="@drawable/white_right_corner_bg"
								android:padding="8dp"
								android:text="Notice Board"
								android:textAlignment="center"
								android:textColor="#000"
								android:textSize="14sp" />

						</LinearLayout>

						<LinearLayout
							android:id="@+id/notification"
							android:layout_width="0dp"
							android:layout_height="130dp"
							android:layout_margin="2dp"
							android:layout_weight="1"
							android:background="@color/colorWhite"
							android:orientation="vertical"
						>
							<ImageView
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_gravity="center"
								android:layout_marginTop="20dp"
								android:background="@drawable/white_right_corner_bg"
								android:src="@drawable/ic_notification"
							/>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:background="@drawable/white_right_corner_bg"
								android:padding="8dp"
								android:text="Notification"
								android:textAlignment="center"
								android:textColor="#000"
								android:textSize="14sp"
							/>

						</LinearLayout>


					</LinearLayout>

					<!-- Second Row-->
					<LinearLayout
						android:id="@+id/accreditation"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:weightSum="3"
					>

						<LinearLayout
							android:id="@+id/academic_cal_uploadIns"
							android:layout_width="0dp"
							android:layout_height="130dp"
							android:layout_margin="2dp"
							android:layout_weight="1"
							android:background="@color/colorWhite"
							android:orientation="vertical"
							>
							<ImageView
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_gravity="center"
								android:layout_marginTop="20dp"
								android:background="@drawable/white_right_corner_bg"
								android:src="@drawable/ic_notice"
								/>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:background="@drawable/white_right_corner_bg"
								android:padding="8dp"
								android:text="Time Table Upload"
								android:textAlignment="center"
								android:textColor="#000"
								android:textSize="14sp"
								/>

						</LinearLayout>
						<LinearLayout
							android:id="@+id/helpdiloadboad"
							android:layout_width="0dp"
							android:layout_height="130dp"
							android:layout_margin="2dp"
							android:layout_weight="1"
							android:background="@color/colorWhite"
							android:orientation="vertical"
						>
							<ImageView
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_gravity="center"
								android:layout_marginTop="20dp"
								android:background="@drawable/white_right_corner_bg"
								android:src="@drawable/ic_help"
							/>
							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:background="@drawable/white_right_corner_bg"
								android:padding="8dp"
								android:text="Help"
								android:textAlignment="center"
								android:textColor="#000"
								android:textSize="14sp"
							/>

						</LinearLayout>


					</LinearLayout>
</LinearLayout>
					<!-- End Second Row-->
					<!-- Third Row-->

					<!-- End Third Row-->

				</LinearLayout>

			</ScrollView>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/drawer_header"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			android:background="#e71c3b"
			android:orientation="vertical"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:background="@drawable/nav_bg"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/drawer_image"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:background="@drawable/drawer_profile"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="5dp"
			>

				<TextView
					android:id="@+id/drawer_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:text="Student Name"
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
					android:textStyle="bold"
				/>
				<TextView
					android:id="@+id/roleadmin"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Role."
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
				/>
				<TextView
					android:id="@+id/txt_designation"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Designation"
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
				/>
				<TextView
					android:id="@+id/txt_Institute"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Institute"
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
				/>

				<TextView
					android:id="@+id/txt_Mobile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:text="Mobile"
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
				/>


				<TextView
					android:id="@+id/enroll_no"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="5dp"
					android:text="Enrollment No."
					android:textColor="@color/colorWhite"
					android:textSize="14sp"
				/>
			</LinearLayout>
		</LinearLayout>
			<android.support.design.widget.NavigationView
				android:id="@+id/navigation_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorWhiteShade"
				app:menu="@menu/institute_drawer_menu"
			/>
		</LinearLayout>
	</android.support.v4.widget.DrawerLayout>


</LinearLayout>
