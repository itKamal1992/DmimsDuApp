<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.dmims.dmims.dashboard.AdminDashboard">
    
    <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:background="#F44336"
                    app:titleTextColor="#fff"
                    android:elevation="4dp"
                    android:fitsSystemWindows="true"
            />
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
				android:background="@color/colorWhiteShade"
				>
                <LinearLayout
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
					android:background="@color/colorWhiteShade">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="170dp"
						android:background="@color/colorblack"
						android:orientation="vertical"

						android:weightSum="10">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_gravity="center_vertical"
							android:layout_weight="1.5
"
							android:gravity="center_vertical"
							android:orientation="vertical">

							<android.support.v4.view.ViewPager
								android:id="@+id/viewPager"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="0dp"
								android:fitsSystemWindows="true"

								/>
						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="8.5"
							android:layout_gravity="center_horizontal">

							<LinearLayout
								android:id="@+id/SliderDots"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_gravity="center_horizontal"
								android:gravity="center_horizontal|center_vertical"
								android:layout_marginTop="0dp"
								android:orientation="horizontal">

							</LinearLayout>
						</LinearLayout>
					</LinearLayout>

            <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorWhiteShade"
				android:orientation="vertical"
				android:padding="2dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                    >
						//Student search add letter
                        <!--<LinearLayout-->
                                <!--android:id="@+id/attendanceGrid"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="130dp"-->
                                <!--android:layout_weight="1"-->
                                <!--android:layout_margin="2dp"-->
                                <!--android:orientation="vertical"-->
                                <!--android:background="@color/colorWhite"-->
                        <!--&gt;-->
                            <!--<ImageView-->
                                    <!--android:layout_width="60dp"-->
                                    <!--android:layout_height="60dp"-->
                                    <!--android:layout_marginTop="20dp"-->
                                    <!--android:layout_gravity="center"-->
                                    <!--android:src="@drawable/ic_attendence"-->
                                    <!--android:background="@drawable/white_right_corner_bg"-->
                            <!--/>-->
                            <!--<TextView-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="match_parent"-->
                                    <!--android:padding="8dp"-->
                                    <!--android:layout_marginTop="0dp"-->
                                    <!--android:background="@drawable/white_right_corner_bg"-->
                                    <!--android:text="Student"-->
                                    <!--android:textSize="14sp"-->
                                    <!--android:textAlignment="center"-->
                                    <!--android:textColor="#000"-->
                            <!--/>-->
                <!---->
                        <!--</LinearLayout>-->
						<LinearLayout
								android:id="@+id/noticeInboxGrid"
								android:layout_width="0dp"
								android:layout_height="130dp"
								android:layout_weight="1"
								android:layout_margin="2dp"
								android:orientation="vertical"
								android:background="@color/colorWhite"
						>
							<ImageView
									android:layout_width="60dp"
									android:layout_height="60dp"
									android:layout_marginTop="20dp"
									android:layout_gravity="center"
									android:src="@drawable/ic_attendence"
									android:background="@drawable/white_right_corner_bg"
							/>
							<TextView
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:padding="8dp"
									android:layout_marginTop="0dp"
									android:background="@drawable/white_right_corner_bg"
									android:text="Notice Inbox"
									android:textSize="14sp"
									android:textAlignment="center"
									android:textColor="#000"
							/>

						</LinearLayout>

    
                        <LinearLayout
                                android:id="@+id/academic_cal_board"
                                android:layout_width="0dp"
                                android:layout_height="130dp"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:orientation="vertical"
                                android:background="@color/colorWhite"
                        >
                            <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_event"
                                    android:background="@drawable/white_right_corner_bg"
                            />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@drawable/white_right_corner_bg"
                                    android:text="Academic Calendar"
                                    android:textSize="14sp"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                            />
    
                        </LinearLayout>
                
                        <LinearLayout
                                android:id="@+id/noticeboardgrid"
                                android:layout_width="0dp"
                                android:layout_height="130dp"
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:orientation="vertical"
                                android:background="@color/colorWhite"
                        >
                            <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_notice"
                                    android:background="@drawable/white_right_corner_bg"
                    
                            />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@drawable/white_right_corner_bg"
                                    android:text="Notice Board"
                                    android:textSize="14sp"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                            />
                
                        </LinearLayout>
            
            
                    </LinearLayout>
            
                    <!-- Second Row-->
                    <LinearLayout
                            android:id="@+id/accreditation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                    >
                     
	                    <LinearLayout
			                    android:id="@+id/notification"
			                    android:layout_width="0dp"
			                    android:layout_height="130dp"
			                    android:layout_weight="1"
			                    android:layout_margin="2dp"
			                    android:orientation="vertical"
			                    android:background="@color/colorWhite"
	                    >
		                    <ImageView
				                    android:layout_width="60dp"
				                    android:layout_height="60dp"
				                    android:layout_marginTop="20dp"
				                    android:layout_gravity="center"
				                    android:src="@drawable/ic_notification"
				                    android:background="@drawable/white_right_corner_bg"
		                    />
		                    <TextView
				                    android:layout_width="match_parent"
				                    android:layout_height="match_parent"
				                    android:padding="8dp"
				                    android:layout_marginTop="0dp"
				                    android:background="@drawable/white_right_corner_bg"
				                    android:text="Notification"
				                    android:textSize="14sp"
				                    android:textAlignment="center"
				                    android:textColor="#000"
		                    />
	
	                    </LinearLayout>
	                    <LinearLayout
			                    android:id="@+id/helpdiloadboad"
			                    android:layout_width="0dp"
			                    android:layout_height="130dp"
			                    android:layout_weight="1"
			                    android:layout_margin="2dp"
			                    android:orientation="vertical"
			                    android:background="@color/colorWhite"
	                    >
		                    <ImageView
				                    android:layout_width="60dp"
				                    android:layout_height="60dp"
				                    android:layout_marginTop="20dp"
				                    android:layout_gravity="center"
				                    android:src="@drawable/ic_help"
				                    android:background="@drawable/white_right_corner_bg"
		                    />
		                    <TextView
				                    android:layout_width="match_parent"
				                    android:layout_height="match_parent"
				                    android:padding="8dp"
				                    android:layout_marginTop="0dp"
				                    android:background="@drawable/white_right_corner_bg"
				                    android:text="Help"
				                    android:textSize="14sp"
				                    android:textAlignment="center"
				                    android:textColor="#000"
		                    />
	
	                    </LinearLayout>
                       
            
            
                    </LinearLayout>
                    <!-- End Second Row-->
                    <!-- Third Row-->
                  
                    <!-- End Third Row-->
			</LinearLayout>
                </LinearLayout>
    
            </ScrollView>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/drawer_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:background="#e71c3b"
        ><LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:background="@drawable/nav_bg"
		android:orientation="horizontal">
			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginTop="5dp"


				android:orientation="horizontal">

				<ImageView
					android:id="@+id/drawer_image"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_margin="2dp"
					android:background="@drawable/drawer_profile"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingLeft="10dp"
				android:layout_margin="@dimen/elevation_5dp"
				>

				<TextView
					android:id="@+id/drawer_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:layout_marginBottom="2dp"
					android:text="Student Name"
					android:textColor="@color/colorWhite"
					android:textSize="20dp"
					android:textStyle="bold"
					/>
				<TextView
					android:id="@+id/user_role"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="2dp"
					android:text="User Role."
					android:textColor="@color/colorWhite"
					android:textSize="16dp"
					android:textStyle="bold"
					/>
				<TextView
					android:id="@+id/txt_designation"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="2dp"
					android:text="Designation"
					android:textColor="@color/colorWhite"
					android:textSize="16dp"
					android:textStyle="bold"
					/>
				<TextView
					android:id="@+id/txt_Email"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="2dp"
					android:text="Email"
					android:textColor="@color/colorWhite"
					android:textSize="16dp"
					android:textStyle="bold"
					/>

				<TextView
					android:id="@+id/txt_Mobile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="2dp"
					android:text="Mobile"
					android:textColor="@color/colorWhite"
					android:textSize="16dp"
					android:textStyle="bold"
					/>


				<TextView
					android:id="@+id/enroll_no"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="5dp"
					android:text="Enrollment No."
					android:textColor="@color/colorWhite"
					android:textSize="16dp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</LinearLayout>

            <android.support.design.widget.NavigationView
                    android:id="@+id/navigation_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/admin_drawer_menu"
            />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    
    



</LinearLayout>
